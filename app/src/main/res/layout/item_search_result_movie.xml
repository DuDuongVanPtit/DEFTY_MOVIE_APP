<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="#101010">

    <ImageView
        android:id="@+id/movieThumbnailImageView"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:contentDescription="Ảnh bìa phim"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/movieTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Tên Phim Rất Dài Để Kiểm Tra Xuống Dòng" />

        <TextView
            android:id="@+id/movieRatingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="★ 9.8"
            android:textColor="#2ED10B"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/movieYearTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                tools:text="2023" />

            <TextView
                android:id="@+id/categorySeparator1TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" | "
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/movieCategory1TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                tools:text="Hành động"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/categorySeparator2TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" | "
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/movieCategory2TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                tools:text="Phiêu lưu"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/movieActorsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#DDDDDD"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="" />

        <TextView
            android:id="@+id/movieDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#BBBBBB"
            android:textSize="13sp"
            android:layout_marginTop="6dp"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="" />

        <Button
            android:id="@+id/playNowButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="end" android:layout_marginTop="8dp"
            android:backgroundTint="#0AAD2A" android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Chiếu ngay"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:cornerRadius="5dp" /> </LinearLayout>
</LinearLayout>
