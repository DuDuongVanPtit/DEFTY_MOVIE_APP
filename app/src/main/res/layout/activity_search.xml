<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111">

    <!-- Header with Back Button and Search Bar -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#191D1D"
        android:gravity="center_vertical">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Back"
            android:tint="#757171" />

        <!-- Search Bar (EditText) -->
        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="Tìm kiếm..."
            android:textColor="#E0E0E0"
            android:textColorHint="#565656"
            android:textSize="16sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:background="@drawable/search_bar_background"
            android:layout_gravity="center_vertical"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp" />

    </LinearLayout>

    <!-- Hot Search Section (Visible by default) -->
    <LinearLayout
        android:id="@+id/hotSearchContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:orientation="vertical">

        <!-- Hot Search Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Tìm kiếm nổi bật"
            android:textColor="#AAAAAA"
            android:textSize="14sp" />

        <!-- Hot Search Results RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hotSearchRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="16dp" />

    </LinearLayout>

    <!-- Fragment Container for Search Suggestions -->
    <FrameLayout
        android:id="@+id/suggestionsFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:visibility="gone" />

</RelativeLayout>