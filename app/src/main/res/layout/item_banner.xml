<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bannerImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/banner_image_description"
        tools:srcCompat="@drawable/placeholder_image" />

    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_bottom_overlay" /> <ImageButton
    android:id="@+id/bannerPlayButton"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_gravity="bottom|end"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="24dp"
    android:background="@drawable/play_button_background" android:src="@android:drawable/ic_media_play"       app:tint="#FFFFFF"                                  android:contentDescription="Play banner content"
    android:elevation="4dp"                             android:padding="12dp"                              />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="72dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/bannerTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="20dp"
            tools:text="Banner Title Placeholder" />

    </LinearLayout>

</FrameLayout>
